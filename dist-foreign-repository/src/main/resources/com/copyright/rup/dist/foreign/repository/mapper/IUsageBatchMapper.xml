<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="IUsageBatchMapper">

    <resultMap id="usageBatchResultMap" type="UsageBatch">
        <result property="id" column="df_usage_batch_uid"/>
        <result property="name" column="name"/>
        <result property="rro.accountNumber" column="rro_account_number"/>
        <result property="paymentDate" column="payment_date"/>
        <result property="fiscalYear" column="fiscal_year"/>
        <result property="grossAmount" column="gross_amount"/>
        <result property="currency" column="currency_ind"/>
        <result property="conversionRate" column="conversion_rate"/>
        <result property="appliedConversionRate" column="applied_conversion_rate"/>
    </resultMap>

    <sql id="usageBatchColumns">
        df_usage_batch_uid,
        name,
        rro_account_number,
        payment_date,
        fiscal_year,
        gross_amount,
        currency_ind,
        conversion_rate,
        applied_conversion_rate
    </sql>

    <insert id="insert" parameterType="UsageBatch">
        insert into ${schema}.df_usage_batch(
            <include refid="usageBatchColumns"/>,
            <include refid="StoredEntityMapper.additionalColumns"/>
        ) values (
            #{id},
            #{name},
            #{rro.accountNumber},
            #{paymentDate},
            #{fiscalYear},
            #{grossAmount},
            #{currency},
            #{conversionRate},
            #{appliedConversionRate},
            <include refid="StoredEntityMapper.insert"/>
        )
    </insert>

    <select id="findFiscalYears" resultType="int">
        select distinct fiscal_year
        from ${schema}.df_usage_batch
        order by fiscal_year
    </select>

    <select id="findUsageBatches" resultMap="usageBatchResultMap">
        select
            <include refid="usageBatchColumns"/>
        from ${schema}.df_usage_batch
    </select>

    <select id="getUsageBatchesCountByName" parameterType="string" resultType="int">
        select count(name)
        from ${schema}.df_usage_batch
        where upper(name) = upper(#{name})
    </select>

    <select id="findUsageBatchByName" parameterType="string" resultMap="usageBatchResultMap">
        select
            <include refid="usageBatchColumns"/>,
            <include refid="StoredEntityMapper.additionalColumns"/>
        from ${schema}.df_usage_batch
        where upper(name) = upper(#{name})
    </select>

    <delete id="deleteUsageBatch" parameterType="String">
        delete from ${schema}.df_usage_batch
        where df_usage_batch_uid = #{batchId}
    </delete>
</mapper>
