<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="IRightsholderMapper">

    <resultMap id="rightsholderResultMap" type="Rightsholder" extends="StoredEntityMapper.storedEntityResult">
        <result property="accountNumber" column="rh_account_number"/>
        <result property="name" column="name"/>
    </resultMap>

    <resultMap id="rroResultMap" type="Rightsholder">
        <result property="accountNumber" column="rro_account_number"/>
        <result property="name" column="name"/>
    </resultMap>

    <select id="findRros" resultMap="rroResultMap">
        select distinct ub.rro_account_number, r.name
        from ${schema}.df_usage_batch ub
        left join ${schema}.df_rightsholder r on r.rh_account_number = ub.rro_account_number
        order by r.name
    </select>

    <insert id="insert" parameterType="Rightsholder">
        insert into ${schema}.df_rightsholder(
            rh_account_number,
            name,
            <include refid="StoredEntityMapper.additionalColumns"/>)
        values(
            #{accountNumber},
            #{name},
            <include refid="StoredEntityMapper.insert"/>
        )
    </insert>

    <select id="findAll" resultMap="rightsholderResultMap">
        select
            rh_account_number,
            name,
            <include refid="StoredEntityMapper.additionalColumns"/>
        from ${schema}.df_rightsholder
    </select>

    <select id="findAccountNumbers" resultType="long">
        select
            distinct(ub.rro_account_number) as account_number
        from ${schema}.df_usage_batch as ub
        union
        select
            distinct(u.rh_account_number) as account_number
        from ${schema}.df_usage as u
        union
        select
            distinct(ua.rh_account_number) as account_number
        from ${schema}.df_usage_archive as ua
    </select>

    <delete id="deleteAll">
        delete from ${schema}.df_rightsholder
    </delete>

    <delete id="deleteByAccountNumber" parameterType="long">
        delete from ${schema}.df_rightsholder
        where rh_account_number = #{accountNumber}
    </delete>
</mapper>
