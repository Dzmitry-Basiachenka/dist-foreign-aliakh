<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="IWithdrawnFundPoolMapper">

    <resultMap id="withdrawnFundPoolResultMap" type="WithdrawnFundPool" extends="StoredEntityMapper.storedEntityResult">
        <result property="id" column="df_fund_pool_uid"/>
        <result property="name" column="name"/>
        <result property="comment" column="comment"/>
        <result property="createUser" column="create_user"/>
    </resultMap>

    <insert id="insert" parameterType="WithdrawnFundPool">
        insert into ${schema}.df_fund_pool (
            df_fund_pool_uid,
            name,
            comment,
            <include refid="StoredEntityMapper.additionalColumns"/>
        ) values (
            #{id},
            #{name},
            #{comment},
            <include refid="StoredEntityMapper.insert"/>
        )
    </insert>

    <select id="findById" resultMap="withdrawnFundPoolResultMap" parameterType="string">
        select
            df_fund_pool_uid,
            name,
            comment
        from ${schema}.df_fund_pool
        where df_fund_pool_uid = #{fundPoolId}
    </select>

    <select id="findAll" resultMap="withdrawnFundPoolResultMap">
        select
            df_fund_pool_uid,
            name,
            comment,
            created_by_user
        from ${schema}.df_fund_pool
        order by updated_datetime desc
    </select>

    <delete id="delete" parameterType="string">
        delete from ${schema}.df_fund_pool
        where df_fund_pool_uid = #{fundPoolId}
    </delete>

    <select id="findNamesByUsageBatchId" resultType="string" parameterType="string">
        select distinct name
        from ${schema}.df_fund_pool
        where df_fund_pool_uid in (
            select distinct df_fund_pool_uid
            from ${schema}.df_usage
            where df_usage_batch_uid = #{df_usage_batch_id}
        )
    </select>
</mapper>
