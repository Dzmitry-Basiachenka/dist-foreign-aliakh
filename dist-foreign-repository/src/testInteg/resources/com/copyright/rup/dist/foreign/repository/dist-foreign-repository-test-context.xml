<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath:/com/copyright/rup/dist/foreign/repository/dist-foreign-repository-context.xml"/>

    <context:property-placeholder location="classpath:/database.properties" />

    <bean id="dist.common.repository.grantPriorityRepository"
          class="com.copyright.rup.dist.common.repository.impl.GrantPriorityRepository"/>

    <bean id="defaultChangelog" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list value-type="java.lang.String">
                <value>/com/copyright/rup/dist/foreign/db/main-changelog.groovy</value>
            </list>
        </property>
    </bean>

    <bean id="extendedChangelog" parent="defaultChangelog"
          class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list value-type="java.lang.String" merge="true">
                <value>/com/copyright/rup/dist/foreign/repository/liquibase/${test.liquibase.changelog:#{null}}</value>
            </list>
        </property>
    </bean>

    <bean id="dfDataSource"
          class="com.copyright.rup.common.test.integ.db.embedded.EmbeddedPostgresDatabaseFactory">
        <property name="version" value="10.3-1"/>
        <property name="resourcesFromPaths"
                  value="#{'${test.liquibase.changelog:}'.equals('') ? defaultChangelog : extendedChangelog}"/>
        <property name="createCommonTablesOnStartup" value="false"/>
    </bean>

</beans>
