<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <import resource="classpath:/com/copyright/rup/dist/foreign/repository/dist-foreign-repository-context.xml"/>

    <context:property-placeholder location="classpath:/database.properties" />

    <bean id="dfDataSource"
          class="com.copyright.rup.common.test.integ.db.embedded.EmbeddedPostgresDatabaseFactory">
        <property name="version" value="9.4.4-1" />
        <property name="resourcesFromPaths">
            <list value-type="java.lang.String">
                <value>/com/copyright/rup/dist/foreign/db/main-changelog.groovy</value>
                <value>/com/copyright/rup/dist/foreign/repository/${test.liquibase.changelog}</value>
            </list>
        </property>
        <property name="createCommonTablesOnStartup" value="false"/>
    </bean>

</beans>
