<included>
    <appender name="FILE_DIST_FOREIGN_PERFORMANCE_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${APP_LOG_DIR:-build}/dist-foreign-ui-performance.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${APP_LOG_DIR:-build}/dist-foreign-ui-performance.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>21</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <append>true</append>
        <encoder>
            <pattern>%m%n</pattern>
        </encoder>
    </appender>

    <!-- Perf4J appender -->
    <appender name="PERFORMANCE" class="org.perf4j.logback.AsyncCoalescingStatisticsAppender">
        <param name="TimeSlice" value="${DIST_FOREIGN_PERF_LOG_SLICE_TIME:-3600000}"/> <!--1 hour-->
        <appender-ref ref="FILE_DIST_FOREIGN_PERFORMANCE_APPENDER"/>
    </appender>

    <logger name="org.perf4j.TimingLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="PERFORMANCE"/>
    </logger>
</included>
