<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="df.integration.sns.endpoint.configuration" class="com.amazonaws.client.builder.AwsClientBuilder$EndpointConfiguration">
        <constructor-arg name="serviceEndpoint" value="$RUP{dist.foreign.aws.sns.service.endpoint}"/>
        <constructor-arg name="signingRegion" value="$RUP{dist.foreign.aws.sns.signing.region}"/>
    </bean>

    <bean id="df.integration.sns.client" class="com.copyright.rup.aws.services.sns.RupAmazonSnsFactoryBean">
        <property name="rupClientConfiguration" ref="df.integration.aws.client.configuration"/>
        <property name="endpointConfiguration" ref="df.integration.sns.endpoint.configuration"/>
    </bean>

    <bean id="df.integration.sns.component" class="org.apache.camel.component.aws.sns.SnsComponent">
        <property name="camelContext" ref="df.integration.camelContext"/>
    </bean>
</beans>
