<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="df.integration.jmsConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="$RUP{dist.foreign.integration.broker.url}"/>
    </bean>

    <bean id="df.integration.pooledConnectionFactory"
          class="org.apache.activemq.pool.PooledConnectionFactory" destroy-method="stop">
        <property name="maxConnections" value="10"/>
        <property name="connectionFactory" ref="df.integration.jmsConnectionFactory"/>
        <property name="idleTimeout" value="0"/>
    </bean>

    <bean id="df.integration.jmsConfig"
          class="org.apache.camel.component.jms.JmsConfiguration">
        <property name="connectionFactory" ref="df.integration.pooledConnectionFactory"/>
        <property name="concurrentConsumers" value="1"/>
    </bean>

    <bean id="df.integration.activemqComponent" class="org.apache.activemq.camel.component.ActiveMQComponent"
          destroy-method="doStop">
        <property name="configuration" ref="df.integration.jmsConfig"/>
    </bean>
</beans>
