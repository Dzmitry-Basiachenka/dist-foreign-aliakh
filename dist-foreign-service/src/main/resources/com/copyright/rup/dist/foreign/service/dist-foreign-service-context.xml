<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-4.1.xsd
            http://www.springframework.org/schema/tx
            http://www.springframework.org/schema/tx/spring-tx-4.1.xsd
            http://camel.apache.org/schema/spring
            http://camel.apache.org/schema/spring/camel-spring-2.18.3.xsd">

    <import resource="classpath:/com/copyright/rup/dist/common/service/dist-common-performance-aspect-context.xml"/>
    <import resource="classpath:/com/copyright/rup/dist/common/service/dist-common-discrepancy-service-context.xml"/>
    <import resource="classpath:/com/copyright/rup/dist/foreign/repository/dist-foreign-repository-context.xml"/>
    <import resource="classpath:/com/copyright/rup/dist/foreign/integration/dist-foreign-integration-context.xml"/>
    <import resource="classpath:/com/copyright/rup/dist/foreign/service/dist-foreign-service-scheduler-context.xml"/>

    <!--Transaction manager configuration-->
    <tx:annotation-driven transaction-manager="txManager"/>

    <bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dfDataSource"/>
    </bean>

    <bean id="df.service.workMatchingProducer"
          class="com.copyright.rup.dist.foreign.service.impl.matching.WorkMatchingProducer">
        <property name="endPoint" value="direct:df.service.matchingUsage"/>
    </bean>

    <bean id="df.service.rightsMatchingProducer"
          class="com.copyright.rup.dist.foreign.service.impl.matching.RightsMatchingProducer">
        <property name="endPoint" value="direct:df.service.matchingRights"/>
    </bean>

    <context:component-scan base-package="com.copyright.rup.dist.foreign.service"/>

    <camelContext id="df.service.camelContext" xmlns="http://camel.apache.org/schema/spring">
        <contextScan/>
        <template id="df.service.producerTemplate"/>

        <endpoint id="df.service.lm.detail.paid.endpoint" uri="$RUP{dist.foreign.service.lm.detail.paid.endpoint}"/>

        <endpoint id="df.service.internal.works.endpoint" uri="direct:df.service.matchingUsage"/>
        <endpoint id="df.service.matching.works.endpoint" uri="$RUP{dist.foreign.service.matching.works.endpoint}"/>

        <endpoint id="df.service.internal.rights.endpoint" uri="direct:df.service.matchingRights"/>
        <endpoint id="df.service.matching.rights.endpoint" uri="$RUP{dist.foreign.service.matching.rights.endpoint}"/>

        <redeliveryPolicyProfile id="defaultRedeliveryPolicy"
                                 maximumRedeliveries="10"
                                 redeliveryDelay="6000"/> <!-- 1 min -->

        <route>
            <from ref="df.service.lm.detail.paid.endpoint"/>
            <choice>
                <when>
                    <simple>'FDA' == ${headers.source}</simple>
                    <log message="Consume paid usages from LM. Source=${headers.source}, Body: ${body}"
                         loggingLevel="DEBUG" logName="com.copyright.rup.dist"/>
                    <unmarshal>
                        <custom ref="df.service.paidUsageUnmarshaller"/>
                    </unmarshal>
                    <bean ref="df.service.paidUsageConsumer"/>
                </when>
            </choice>
        </route>

        <route>
            <from ref="df.service.internal.works.endpoint"/>
            <marshal>
                <custom ref="df.service.matchingMarshaller"/>
            </marshal>
            <to ref="df.service.matching.works.endpoint"/>
        </route>

        <route>
            <from ref="df.service.matching.works.endpoint"/>
            <unmarshal>
                <custom ref="df.service.matchingUnmarshaller"/>
            </unmarshal>
            <bean ref="df.service.workMatchingConsumer"/>
        </route>

        <route>
            <from ref="df.service.internal.rights.endpoint"/>
            <marshal>
                <custom ref="df.service.matchingMarshaller"/>
            </marshal>
            <to ref="df.service.matching.rights.endpoint"/>
        </route>

        <route>
            <from ref="df.service.matching.rights.endpoint"/>
            <unmarshal>
                <custom ref="df.service.matchingUnmarshaller"/>
            </unmarshal>
            <bean ref="df.service.rightsMatchingConsumer"/>
        </route>
    </camelContext>
</beans>
