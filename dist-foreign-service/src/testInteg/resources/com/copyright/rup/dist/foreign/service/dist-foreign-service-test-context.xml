<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.1.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-4.1.xsd">

    <context:property-placeholder location="classpath:/database.properties" properties-ref="requiredProperties"/>
    <util:properties id="requiredProperties">
        <prop key="rup.config.dir"/>
    </util:properties>

    <import resource="classpath:/com/copyright/rup/common/config/rup-properties-config.xml"/>
    <import resource="classpath:/com/copyright/rup/dist/foreign/service/dist-foreign-service-context.xml"/>

    <bean id="defaultChangelog" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list value-type="java.lang.String">
                <value>/com/copyright/rup/dist/foreign/db/main-changelog.groovy</value>
            </list>
        </property>
    </bean>

    <bean id="extendedChangelog" parent="defaultChangelog"
          class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list value-type="java.lang.String" merge="true">
                <value>/com/copyright/rup/dist/foreign/service/liquibase/${test.liquibase.changelog:#{null}}</value>
            </list>
        </property>
    </bean>

    <bean id="dfDataSource"
          class="com.copyright.rup.common.test.integ.db.embedded.EmbeddedPostgresDatabaseFactory">
        <property name="version" value="9.4.4-1"/>
        <property name="resourcesFromPaths"
                  value="#{'${test.liquibase.changelog:}'.equals('') ? defaultChangelog : extendedChangelog}"/>
        <property name="createCommonTablesOnStartup" value="false"/>
    </bean>

    <bean id="defaultZoneInfo" class="sun.util.calendar.ZoneInfo" factory-method="getTimeZone">
        <constructor-arg type="java.lang.String" value="America/New_York"/>
    </bean>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod" value="java.util.TimeZone.setDefault"/>
        <property name="arguments">
            <list>
                <ref bean="defaultZoneInfo"/>
            </list>
        </property>
    </bean>

    <bean id="df.service.paidUsageConsumer"
          class="com.copyright.rup.dist.foreign.service.impl.mock.PaidUsageConsumerMock"/>

    <bean id="piIntegrationService" class="com.copyright.rup.dist.foreign.service.impl.mock.PiIntegrationServiceMock"/>

    <bean id="usageBatchService" class="com.copyright.rup.dist.foreign.service.impl.mock.UsageBatchServiceMock"/>
</beans>
